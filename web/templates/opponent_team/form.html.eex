<%= form_for @changeset, @action, fn f -> %>
  <%= show_form_errors(@changeset, f) %>

  <div class="form-group <%= error_cls @changeset, f, :name %>">
    <%#= label f, :name, "Name", class: "control-label" %>
    <%= text_input f, :name, class: "form-control", placeholder: gettext("name") %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= submit gettext("save"), class: "btn btn-primary" %>
  </div>
<% end %>
