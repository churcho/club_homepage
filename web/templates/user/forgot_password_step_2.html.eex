<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <div class="jumbotron content-box">
      <h2><%= gettext("password_forgotten_question") %></h2>
      <%= if @user do %>
        <p><%= gettext("forgot_password_email_sent") %></p>
      <% else %>
        <p><%= gettext("no_user_found_to_reset_password_for") %></p>
        <%= render(@conn, "forgot_password_form.html") %>
      <% end %>
    </div>
  </div>
</div>
